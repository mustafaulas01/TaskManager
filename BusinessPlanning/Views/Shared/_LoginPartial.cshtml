@using Microsoft.AspNetCore.Identity


<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <a href="/Account/UserProfile" class="nav-link text-dark" title="Manage"> <i class="fas fa-user mt-2"></i>  @User.Identity.Name </a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <a href="/Account/LogOut" class="nav-link btn btn-link text-dark"> <i class="fas fa-close mt-2"></i> Çıkış Yap</a>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" href="/Account/Register">Kayıt Ol</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" href="/Account/Login"><i class="fas fa-lock mt-2"></i> Giriş Yap</a>
        </li>
    }
</ul>
